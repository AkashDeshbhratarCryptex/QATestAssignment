<div class="container">
  <div>
    <%= link_to "Home", home_index_path, method: :get %> |
    <%= link_to "Submit Answer", new_answer_home_path(@question.id), method: :get %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2><%= @question.title %></h2>
      <p><%= @question.description %></p>      
    </div>
  </div>

  <hr>
  <h2><%= @question.title + "'s Answers" %></h2>
  <hr>

  <div class="row">
    <div class="col-md-6">
      <% @question_answers.each do |answer| %>
        <p><%= answer.description %></p><br>
      <%end%>
    </div>
  </div>
</div>