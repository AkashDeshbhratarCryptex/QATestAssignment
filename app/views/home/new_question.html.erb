<div>
  <%= link_to "Home", home_index_path, method: :get %>
</div>
<h2>New Question</h2>
<%= form_for(@question, as: 'question', url: submit_question_home_index_path) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>