<div>
  <%= link_to "Home", home_index_path, method: :get %>
</div>
<h2>New Topic</h2>
<%= form_for(@topic, as: 'topic', url: submit_topic_home_index_path) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_area :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>